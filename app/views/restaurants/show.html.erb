<h3><%= @restaurant.name %></h3>
<p><%= @restaurant.address %></p>
<p>Rating: <%= @restaurant.rating %></p>

<%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant.id), class: "btn btn-primary mr-2" %>

<!-- Remember to specify the method (DELETE) in the link_to! -->
<%= link_to "Delete this restaurant", restaurant_path(@restaurant.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
